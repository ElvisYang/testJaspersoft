<html> 
	<head>
		<style>
			#container {
				width: 1200px;
				height: 500px;
			}

			#header {
				width: 100%;
				height: 40px;
				background-color: Green;
				font: white;
				font-weight: 10;
				text-align: center;
				vertical-align: middle;
				font-size: 20px;
			}
		</style>

		<script type="text/javascript" src="http://localhost:8080/jasperserver-pro/client/visualize.js"></script>

		<script>

		window.onload = function()
        {
        	visualize({
        		auth: {
        			name: "superuser",
        			password: "superuser",
        			organization: ""
        		}
        	}, function(v) {
        		v("#container").report({
        			resource: "/public/Samples/Reports/01._Geographic_Results_by_Segment_Report",
        			error: handleError
        		});

        		function handleError(e) {
        			alert(e.message);
        		}
        	})

		}
		</script>
	</head>
	
	<body>
		<div id="header">BIM360 Reporting</div>
		<br/>

		<div id="container"></div>
		<br/>
		<br/>
		<br/>
		<br/>
		<br/>

		<%= link_to "Download report as PDF", "test.pdf" %>
		<br/>
		<br/>
		<br/>
		<%= link_to "Download report as CSV", "test.csv" %>
	</body>
</html>
